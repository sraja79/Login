@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> _signInManager;

@if(_signInManager.IsSignedIn(User) && User.Claims.Count()>0)
{
    <div class="dropdown ">
        <a href="#" class="dropdown-toggle text-white" data-bs-toggle="dropdown"><i class="fa fa-user-circle"  style="font-size:18px;color:yellow"></i> Hi @User.FindFirst("FirstName").Value</a>
        <div class="dropdown-menu">
            <a  asp-action="Logout" asp-controller="Account" class="dropdown-item">Sign Out</a>
            <a asp-action="ChangePassword" asp-controller="Account" class="dropdown-item">Change Password</a>
        </div>
    </div>
}
else
{
    <a class="col-md-1 offset-4 btn btn-danger" asp-controller="Account" asp-action="SingUp">Register</a>
    <a class="col-md-1 btn btn-warning" asp-controller="Account" asp-action="SignIn">Login </a>
}




